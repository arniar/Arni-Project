<body>
    <div class="modal-overlay make-visible" id="add-form">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Add Products</h2>
                <button class="close-btn" id="close-btn-start">√ó</button>
            </div>
            
            <form class="form-container">
                <div class="form-section">
                    <h3>General Information</h3>
                    <div class="form-group">
                        <label>Product Name</label>
                        <input type="text" placeholder="Type product name here...">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea placeholder="Type product description here..."></textarea>
                    </div>
                </div>
    
                <div class="form-section">
                    <h3>Category</h3>
                    <div class="form-group">
                        <label>Category</label>
                        <select>
                            <option value="">Select Category</option>
                            <option value="electronics">Electronics</option>
                            <option value="fashion">Fashion</option>
                            <option value="furniture">Furniture</option>
                        </select>
                    </div>
                </div>
    
                <div class="form-section">
                    <h3>Pricing & Stock</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Base Price</label>
                            <input type="number" placeholder="Type base price here...">
                        </div>
                        <div class="form-group">
                            <label>VAT Amount (%)</label>
                            <input type="number" placeholder="Type VAT amount...">
                        </div>
                        <div class="form-group">
                            <label>Stock Count</label>
                            <input type="number" placeholder="Type stock count here...">
                        </div>
                    </div>
                </div>
    

    
                <div class="form-section">
                    <h3>Product Photos</h3>
                    <div class="image-upload-grid">
                        <div class="image-upload-box">
                            <input type="file" id="photo1" accept="image/*" style="display: none;">
                            <label for="photo1">
                                <div style="text-align: center;">
                                    <div style="font-size: 24px; color: var(--text-light);">+</div>
                                    <span>Upload Photo 1</span>
                                </div>
                            </label>
                        </div>
                        
                        <div class="image-upload-box">
                            <input type="file" id="photo2" accept="image/*" style="display: none;">
                            <label for="photo2">
                                <div style="text-align: center;">
                                    <div style="font-size: 24px; color: var(--text-light);">+</div>
                                    <span>Upload Photo 2</span>
                                </div>
                            </label>
                        </div>
                        
                        <div class="image-upload-box">
                            <input type="file" id="photo3" accept="image/*" style="display: none;">
                            <label for="photo3">
                                <div style="text-align: center;">
                                    <div style="font-size: 24px; color: var(--text-light);">+</div>
                                    <span>Upload Photo 3</span>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
    
                <button type="submit" class="submit-btn">Save Product</button>
            </form>
